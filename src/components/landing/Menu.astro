<style>
  /* Define the styles for the navbar and dropdown */
  .group:hover .group-hover\:block {
    display: block;
  }

  .relative.group:hover .group-hover\:block {
    display: block;
  }

  .relative.group:focus-within .group-hover\:block {
    display: block;
  }

  .group-hover\:block {
    display: none;
  }

  .submenu-open .group-hover\:block {
    display: block;
  }

  .submenu {
    transition: all 0.3s ease-in-out;
  }

  .submenu a {
    transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
  }

  .submenu a:hover {
    background-color: #1a202c;
    color: #fff;
  }

  #mobile-menu .submenu a {
    padding-left: 2rem;
  }
</style>

<nav id="navbar" class="bg-black/50 fixed top-0 left-0 right-0 z-50 transition duration-300 ease-in-out">
  <div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <div class="flex items-center">
        <img class="h-8 w-auto" src="images/logo.png" alt="Logo">
        <span class="ml-3 text-2xl font-bold text-white">Softlution</span>
      </div>
      <div class="hidden md:flex space-x-4">
        <a href="./" class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Home</a>
        <a href="./About" class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">About us</a>
        <div class="relative group">
          <a href="#" class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium flex items-center">
            Services
            <svg class="ml-1 w-4 h-4 text-gray-300 group-hover:text-white transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <div class="submenu absolute left-0 hidden group-hover:block bg-white shadow-md mt-2 rounded-md">
            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-900 hover:text-white">Cybersecurity</a>
            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-900 hover:text-white">Data analysis</a>
            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-900 hover:text-white">Cryptocurrencies</a>
            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-900 hover:text-white">Artificial Intelligence</a>
          </div>
        </div>
        <a href="./Quote" class="bg-green-500 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-green-600">Request a Quote</a>
        <a href="./Portafolio" class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Portafolio</a>
        <a href="./Contacto" class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Contact us</a>
      </div>
      <div class="-mr-2 flex items-center md:hidden">
        <button id="menu-button" type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:bg-gray-700 focus:text-white">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Responsive menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md mt-2 rounded-md">
    <a href="./" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">Home</a>
    <a href="./About" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">About us</a>
    <div class="relative group">
      <button id="submenu-button" class="w-full text-left block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 flex items-center">
        Services
        <svg class="ml-1 w-4 h-4 text-gray-700 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      <div id="submenu" class="submenu hidden bg-white shadow-md mt-2 rounded-md">
        <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-900 hover:text-white">Cybersecurity</a>
        <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-900 hover:text-white">Data analysis</a>
        <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-900 hover:text-white">Cryptocurrencies</a>
        <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-900 hover:text-white">Artificial Intelligence</a>
      </div>
    </div>
    <a href="./Quote" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">Request a Quote</a>
    <a href="./Portafolio" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">Portafolio</a>
    <a href="./Contacto" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">Contact us</a>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuButton = document.getElementById('menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const submenuButton = document.getElementById('submenu-button');
    const submenu = document.getElementById('submenu');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', function () {
        mobileMenu.classList.toggle('hidden');
      });
    }

    if (submenuButton && submenu) {
      submenuButton.addEventListener('click', function () {
        submenu.classList.toggle('hidden');
      });
    }

    const navbar = document.getElementById('navbar');
    if (navbar) {
      window.addEventListener('scroll', function () {
        if (window.scrollY > 50) {
          navbar.classList.add('bg-black/50', 'bg-opacity-50');
        } else {
          navbar.classList.remove('bg-black/50', 'bg-opacity-50');
        }
      });
    }

    // Ensure submenus stay visible on hover with delay
    const submenuItems = document.querySelectorAll('.relative.group');
    submenuItems.forEach(item => {
      let timeout;
      item.addEventListener('mouseenter', () => {
        const dropdown = item.querySelector('.group-hover\\:block');
        if (dropdown) {
          clearTimeout(timeout);
          dropdown.style.display = 'block';
        }
      });
      item.addEventListener('mouseleave', () => {
        const dropdown = item.querySelector('.group-hover\\:block');
        if (dropdown) {
          timeout = window.setTimeout(() => {
            dropdown.style.display = 'none';
          }, 200); // Add a delay before hiding the submenu
        }
      });
    });
  });
</script>
