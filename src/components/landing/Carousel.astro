    /* Define the slide-up animation */
    @keyframes slideUp {
      from {
        transform: translateY(100%);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    /* Apply the animation to the text and button elements */
    .animate-slide-up {
      animation: slideUp 1s ease-in-out;
    }

    .carousel-item {
      position: absolute;
      width: 100%;
      height: 100%;
      opacity: 0;
      transition-property: all;
      object-fit: cover;
    }

    .carousel-item.active {
      opacity: 1;
      position: absolute;
      transform: translateX(0);
    }

    .carousel-item-prev,
    .carousel-item-next {
      position: absolute;
      top: 0;
      width: 100%;
      height: 100%;
      transition: transform 0.6s ease;
    }

    .carousel-item-prev {
      transform: translateX(-100%);
    }

    .carousel-item-next {
      transform: translateX(100%);
    }
  </style>

